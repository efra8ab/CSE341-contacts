{
  "swagger": "2.0",
  "info": {
    "title": "Contacts API",
    "description": "API for managing contacts within the CSE341 course project",
    "version": "1.0.0"
  },
  "host": "https://cse341-contacts-vs3z.onrender.com/",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/contacts/": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Retrieve every contact that exists in the database",
        "description": "",
        "responses": {
          "200": {
            "description": "A JSON array with all contacts",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Contact"
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Create a new contact",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Information required to create a contact",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewContact"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Document id for the newly created contact",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "665f9362c02c48a038a4fcd1"
                }
              },
              "required": [
                "id"
              ],
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Look up a single contact",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB identifier of the contact"
          }
        ],
        "responses": {
          "200": {
            "description": "The contact that matches the provided id",
            "schema": {
              "$ref": "#/definitions/Contact"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Contacts"
        ],
        "summary": "Update one contact by replacing it",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB identifier of the contact"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Complete payload for the contact",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewContact"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content response once the contact is updated"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Delete a single contact",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "MongoDB identifier of the contact"
          }
        ],
        "responses": {
          "204": {
            "description": "Contact removed successfully"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Contact": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "69087bd558cdd8c50f19938a"
        },
        "firstName": {
          "type": "string",
          "example": "Bruce"
        },
        "lastName": {
          "type": "string",
          "example": "Banner"
        },
        "email": {
          "type": "string",
          "example": "smash@gamma.com"
        },
        "favoriteColor": {
          "type": "string",
          "example": "Green"
        },
        "birthday": {
          "type": "string",
          "example": "1980"
        }
      }
    },
    "NewContact": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "example": "Diana"
        },
        "lastName": {
          "type": "string",
          "example": "Prince"
        },
        "email": {
          "type": "string",
          "example": "wonderwoman@themiscira.gov"
        },
        "favoriteColor": {
          "type": "string",
          "example": "Yellow"
        },
        "birthday": {
          "type": "string",
          "example": "1984"
        }
      }
    }
  }
}